<% provide(:title, "Room: " + @room.name) %>
<div class = "container">
  <div class = "row">
    <div class = "col-md-2"></div>

    <div class = "col-md-8">
        <div class = "panel panel-primary">
          <div class = "panel-heading"><%= @room.name %></div>
          <div id = "chats-container" class = "list-group">

          </div>
        </div> <!-- panel-container -->

        <div id = "messages_feed"></div>
        <div class = "post-maker">
          <%= form_for @new_message, url: {controller:"messages", action: "create"}, html: { class: "form-horizontal"} do |form| %>
          <div class = "form-group">
            <div class = "col-md-2">
            <%= form.label :user, "Post as: ", class: "control-label" %>
            </div>
            <div class = "col-md-10">
            <%= form.text_field :user, class: "form-control" %>
            </div>
          </div>
          <div class = "form-group">
            <div class = "col-md-2">
            <%= form.label :content, "Content: ", class: "control-label" %>
            </div>
            <div class = "col-md-10">
            <%= form.text_field :content, class: "form-control" %>
            </div>
          </div>
          <div class = "form-group">
            <div class = "col-md-8"></div>
            <div class = "col-md-4">
            <%= form.submit "Post", class: "btn btn-primary pull-right col-md-12", id: "post-submit" %> 
            </div>
          </div>
          <input type = "hidden" name = "message[room_id]" value = "<%= @room.id %>">

          <% end %>
        </div> <!-- end post-maker -->

    </div>

    <div class = "col-md-2"></div>
  </div>
</div>
<input type = "hidden" id = "last_timestamp" value = "">
